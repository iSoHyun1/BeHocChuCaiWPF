<Window x:Class="BeHocChuCaiWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bé Học Chữ Cái" Height="700" Width="1000" 
        WindowStartupLocation="CenterScreen"
        Background="#FFF5E6">
    <Window.Resources>
        <!-- Style cho Button -->
        <Style x:Key="NextButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="25">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45a049"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Nền trang sách với hiệu ứng đổ bóng -->
        <Border CornerRadius="20" Margin="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="5" 
                                 Opacity="0.3" Color="Gray"/>
            </Border.Effect>
            <Border.Background>
                <ImageBrush ImageSource="Images/book_background.png" 
                           Stretch="Fill"/>
            </Border.Background>
        </Border>

        <!-- Container cho nội dung chính -->
        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Tiêu đề -->
            <TextBlock Text="Khám Phá Chữ Cái" 
                       FontSize="36" FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,40"
                       Foreground="#2E7D32">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="2" 
                                     Opacity="0.3" Color="Gray"/>
                </TextBlock.Effect>
            </TextBlock>

            <!-- Progress Indicator -->
            <StackPanel Grid.Row="0" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Top" 
                        Margin="0,20,20,0">
                <TextBlock Name="progressText" 
                           Text="Cặp 1/12"
                           FontSize="20" 
                           FontWeight="Bold"
                           Foreground="#2E7D32"/>
            </StackPanel>

            <!-- Container cho trứng và nội dung -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Trứng 1 và nội dung -->
                <Grid Grid.Column="0" Margin="20">
                    <Image Name="picEgg1Whole" Source="Images/egg_whole.png" 
                           Width="220" Height="240"
                           MouseDown="picEgg1_Click">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform CenterX="110" CenterY="120"/>
                            </TransformGroup>
                        </Image.RenderTransform>
                        <Image.ToolTip>
                            <ToolTip>
                                <TextBlock Text="Click để mở trứng"/>
                            </ToolTip>
                        </Image.ToolTip>
                        <Image.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation 
                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                            To="1.1" Duration="0:0:0.2"/>
                                        <DoubleAnimation 
                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                            To="1.1" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation 
                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                            To="1" Duration="0:0:0.2"/>
                                        <DoubleAnimation 
                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                            To="1" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Image.Triggers>
                    </Image>

                    <Image Name="picEgg1Cracked" Source="Images/egg_cracked.png"
                           Width="220" Height="240" Visibility="Hidden">
                        <Image.RenderTransform>
                            <ScaleTransform CenterX="110" CenterY="120"/>
                        </Image.RenderTransform>
                    </Image>

                    <Image Name="picLetter1" Width="140" Height="140" 
                           Visibility="Hidden" MouseDown="picLetter1_Click">
                        <Image.RenderTransform>
                            <ScaleTransform CenterX="70" CenterY="70"/>
                        </Image.RenderTransform>
                        <Image.ToolTip>
                            <ToolTip>
                                <TextBlock Text="Click để xem từ vựng"/>
                            </ToolTip>
                        </Image.ToolTip>
                    </Image>

                    <StackPanel Name="word1Container" Visibility="Hidden"
                              VerticalAlignment="Bottom" Margin="0,0,0,20">
                        <StackPanel.RenderTransform>
                            <ScaleTransform CenterX="80" CenterY="80"/>
                        </StackPanel.RenderTransform>
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Style.Triggers>
                                    <Trigger Property="IsVisible" Value="True">
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation 
                                                        Storyboard.TargetProperty="Opacity"
                                                        From="0" To="1" Duration="0:0:0.5"/>
                                                    <DoubleAnimation 
                                                        Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                        From="0.5" To="1" Duration="0:0:0.5"/>
                                                    <DoubleAnimation 
                                                        Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                        From="0.5" To="1" Duration="0:0:0.5"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Name="lblWord1" FontSize="32" FontWeight="Bold"
                                 HorizontalAlignment="Center"
                                 Foreground="#1565C0"/>
                        <Image Name="picWord1" Width="160" Height="160"
                               Margin="0,10,0,0">
                            <Image.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="3" 
                                                 Opacity="0.3" Color="Gray"/>
                            </Image.Effect>
                        </Image>
                    </StackPanel>
                </Grid>

                <!-- Trứng 2 và nội dung -->
                <Grid Grid.Column="1" Margin="20">
                    <Image Name="picEgg2Whole" Source="Images/egg_whole.png"
                           Width="220" Height="240"
                           MouseDown="picEgg2_Click">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform CenterX="110" CenterY="120"/>
                            </TransformGroup>
                        </Image.RenderTransform>
                        <Image.ToolTip>
                            <ToolTip>
                                <TextBlock Text="Click để mở trứng"/>
                            </ToolTip>
                        </Image.ToolTip>
                        <Image.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation 
                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                            To="1.1" Duration="0:0:0.2"/>
                                        <DoubleAnimation 
                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                            To="1.1" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation 
                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                            To="1" Duration="0:0:0.2"/>
                                        <DoubleAnimation 
                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                            To="1" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Image.Triggers>
                    </Image>

                    <Image Name="picEgg2Cracked" Source="Images/egg_cracked.png"
                           Width="220" Height="240" Visibility="Hidden">
                        <Image.RenderTransform>
                            <ScaleTransform CenterX="110" CenterY="120"/>
                        </Image.RenderTransform>
                    </Image>

                    <Image Name="picLetter2" Width="140" Height="140"
                           Visibility="Hidden" MouseDown="picLetter2_Click">
                        <Image.RenderTransform>
                            <ScaleTransform CenterX="70" CenterY="70"/>
                        </Image.RenderTransform>
                        <Image.ToolTip>
                            <ToolTip>
                                <TextBlock Text="Click để xem từ vựng"/>
                            </ToolTip>
                        </Image.ToolTip>
                    </Image>

                    <StackPanel Name="word2Container" Visibility="Hidden"
                              VerticalAlignment="Bottom" Margin="0,0,0,20">
                        <StackPanel.RenderTransform>
                            <ScaleTransform CenterX="80" CenterY="80"/>
                        </StackPanel.RenderTransform>
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Style.Triggers>
                                    <Trigger Property="IsVisible" Value="True">
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation 
                                                        Storyboard.TargetProperty="Opacity"
                                                        From="0" To="1" Duration="0:0:0.5"/>
                                                    <DoubleAnimation 
                                                        Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                        From="0.5" To="1" Duration="0:0:0.5"/>
                                                    <DoubleAnimation 
                                                        Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                        From="0.5" To="1" Duration="0:0:0.5"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Name="lblWord2" FontSize="32" FontWeight="Bold"
                                 HorizontalAlignment="Center"
                                 Foreground="#1565C0"/>
                        <Image Name="picWord2" Width="160" Height="160"
                               Margin="0,10,0,0">
                            <Image.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="3" 
                                                 Opacity="0.3" Color="Gray"/>
                            </Image.Effect>
                        </Image>
                    </StackPanel>
                </Grid>
            </Grid>

            <Button Name="btnBack" 
                 Content="← Quay Lại"
                 Style="{StaticResource NextButtonStyle}"
                 Click="btnBack_Click"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Margin="20,20,0,0"/>
            <!-- Nút Tiếp -->
            <Button Name="btnNextPair" Content="Tiếp Theo →" 
                    Grid.Row="2" Style="{StaticResource NextButtonStyle}"
                    Click="btnNextPair_Click" Visibility="Hidden"
                    HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button.RenderTransform>
                    <ScaleTransform/>
                </Button.RenderTransform>
                <Button.Triggers>
                    <EventTrigger RoutedEvent="Button.Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation 
                                    Storyboard.TargetProperty="Opacity"
                                    From="0" To="1" Duration="0:0:0.3"/>
                                <DoubleAnimation 
                                    Storyboard.TargetProperty="RenderTransform.ScaleX"
                                    From="0.5" To="1" Duration="0:0:0.3"/>
                                <DoubleAnimation 
                                    Storyboard.TargetProperty="RenderTransform.ScaleY"
                                    From="0.5" To="1" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
        </Grid>
    </Grid>
</Window>