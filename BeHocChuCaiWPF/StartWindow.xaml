<Window x:Class="BeHocChuCaiWPF.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bé Học Chữ Cái" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundGradient}">

    <Window.Resources>
        <!-- Easing Function cho animation mượt mà -->
        <CubicEase x:Key="EaseInOut" EasingMode="EaseInOut"/>

        <!-- Style cho Button chính -->
        <Style x:Key="StartButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlueBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="40,20"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="30">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" ShadowDepth="5" 
                                                Opacity="0.3" Color="#2E7D32"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource SecondaryGreenBrush}"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho Title -->
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="64"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="{StaticResource SoftPurpleBrush}"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="2" 
                                     Opacity="0.3" Color="Gray"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Nền trang sách với hiệu ứng đổ bóng -->
        <Border CornerRadius="20" Margin="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="5" 
                                 Opacity="0.3" Color="Gray"/>
            </Border.Effect>
            <Border.Background>
                <ImageBrush ImageSource="Images/book_background.png" 
                           Stretch="Fill"/>
            </Border.Background>
        </Border>

        <!-- Container chính -->
        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title với style mới -->
            <TextBlock Text="Bé Học Chữ Cái" 
                      Style="{StaticResource TitleStyle}"
                      HorizontalAlignment="Center"
                      Margin="0,40,0,0"/>

            <!-- Mascot Container với animation cải tiến -->
            <Grid Grid.Row="1">
                <Border Width="400" Height="400"
                        Background="White" CornerRadius="200"
                        Margin="0,20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="5" 
                                         Opacity="0.2" Color="Gray"/>
                    </Border.Effect>
                </Border>

                <Image Name="mascotImage" 
                       Source="Images/mascot.png"
                       Width="350" Height="350"
                       RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <TranslateTransform/>
                            <RotateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                    <Image.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation 
                                        Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(TranslateTransform.Y)"
                                        From="0" To="20" Duration="0:0:2"
                                        EasingFunction="{StaticResource EaseInOut}"
                                        AutoReverse="True"/>
                                    <DoubleAnimation 
                                        Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)"
                                        From="-5" To="5" Duration="0:0:2"
                                        EasingFunction="{StaticResource EaseInOut}"
                                        AutoReverse="True"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Image.Triggers>
                </Image>
            </Grid>

            <!-- Button Container với animation mượt hơn -->
            <StackPanel Grid.Row="2" Margin="0,0,0,40">
                <Button Name="btnStart" 
                        Content="Bắt Đầu Học"
                        Style="{StaticResource StartButtonStyle}"
                        Click="btnStart_Click">
                    <Button.RenderTransform>
                        <ScaleTransform/>
                    </Button.RenderTransform>
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation 
                                        Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                        From="1" To="1.1" Duration="0:0:1"
                                        EasingFunction="{StaticResource EaseInOut}"
                                        AutoReverse="True"/>
                                    <DoubleAnimation 
                                        Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                        From="1" To="1.1" Duration="0:0:1"
                                        EasingFunction="{StaticResource EaseInOut}"
                                        AutoReverse="True"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Button.Triggers>
                </Button>

                <TextBlock Text="Học chữ cái qua trò chơi vui nhộn!"
                          FontSize="24" 
                          FontFamily="Segoe UI"
                          HorizontalAlignment="Center"
                          Margin="0,20,0,0"
                          Foreground="{StaticResource SoftRedBrush}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>