<Window x:Class="BeHocChuCaiWPF.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bé Học Chữ Cái" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#FFF5E6">

    <Window.Resources>
        <!-- Style cho Button -->
        <Style x:Key="StartButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="40,20"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="30">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="5" 
                                                Opacity="0.3" Color="Gray"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45a049"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Nền trang sách với hiệu ứng đổ bóng -->
        <Border CornerRadius="20" Margin="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="5" 
                                 Opacity="0.3" Color="Gray"/>
            </Border.Effect>
            <Border.Background>
                <ImageBrush ImageSource="Images/book_background.png" 
                           Stretch="Fill"/>
            </Border.Background>
        </Border>

        <!-- Container chính -->
        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Text="Bé Học Chữ Cái" 
                      FontSize="64" FontWeight="Bold"
                      HorizontalAlignment="Center"
                      Margin="0,40,0,0"
                      Foreground="#2E7D32">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="2" 
                                     Opacity="0.3" Color="Gray"/>
                </TextBlock.Effect>
            </TextBlock>

            <!-- Mascot Container -->
            <Grid Grid.Row="1">
                <Border Width="400" Height="400"
                        Background="White" CornerRadius="200"
                        Margin="0,20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="5" 
                                         Opacity="0.2" Color="Gray"/>
                    </Border.Effect>
                </Border>

                <Image Name="mascotImage" 
                       Source="Images/mascot.png"
                       Width="350" Height="350"
                       RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                    <Image.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation 
                                        Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(TranslateTransform.Y)"
                                        From="0" To="20" Duration="0:0:1.5"
                                        AutoReverse="True"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Image.Triggers>
                </Image>
            </Grid>

            <!-- Button Container -->
            <StackPanel Grid.Row="2" Margin="0,0,0,40">
                <Button Name="btnStart" 
                        Content="Bắt Đầu Học"
                        Style="{StaticResource StartButtonStyle}"
                        Click="btnStart_Click">
                    <Button.RenderTransform>
                        <ScaleTransform/>
                    </Button.RenderTransform>
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation 
                                        Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                        From="1" To="1.05" Duration="0:0:0.5"
                                        AutoReverse="True"/>
                                    <DoubleAnimation 
                                        Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                        From="1" To="1.05" Duration="0:0:0.5"
                                        AutoReverse="True"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Button.Triggers>
                </Button>

                <TextBlock Text="Học chữ cái qua trò chơi vui nhộn!"
                          FontSize="24" 
                          HorizontalAlignment="Center"
                          Margin="0,20,0,0"
                          Foreground="#666666"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>