<Application x:Class="BeHocChuCaiWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:BeHocChuCaiWPF.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Giữ lại các Converters -->
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
            <conv:EggStateConverter x:Key="EggStateConverter"/>
            <conv:LockOpacityConverter x:Key="LockOpacityConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>